---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <div class="h-screen w-full pt-[100px]">
    <div class="relative h-full w-full bg-background/90">
      <img
        src="/images/hero.jpg"
        alt="Misty mountain range at dawn"
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute bottom-12 left-12 bg-background/90 px-6 py-4">
        <p class="text-primary text-lg uppercase tracking-[0.2em] font-semibold">
          Dawn Over The Range, 2025
        </p>
      </div>
    </div>
  </div>
</Layout>
