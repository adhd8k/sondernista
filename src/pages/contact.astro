---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Contact â€” Sondernista">
  <div class="pt-28">
    <section class="py-16 md:py-24">
      <div class="max-w-[1400px] mx-auto px-8">
        <div class="max-w-2xl">
          <h1 class="text-4xl md:text-5xl uppercase tracking-[0.15em] font-semibold text-primary">
            Contact
          </h1>
          
          <p class="mt-10 text-lg text-muted-foreground leading-relaxed">
            For inquiries about prints, exhibitions, commissions, or licensing, 
            please reach out using the form below or email directly.
          </p>

          <form action="https://formspree.io/f/mkovwgva" method="POST" class="mt-16 space-y-10">
            <div>
              <label 
                for="name" 
                class="block text-base uppercase tracking-[0.15em] text-secondary mb-3"
              >
                Name
              </label>
              <input 
                type="text" 
                id="name" 
                name="name"
                required
                class="w-full bg-transparent border border-border px-5 py-4 text-lg text-primary focus:outline-none focus:border-primary transition-colors"
              />
            </div>

            <div>
              <label 
                for="email" 
                class="block text-base uppercase tracking-[0.15em] text-secondary mb-3"
              >
                Email
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                class="w-full bg-transparent border border-border px-5 py-4 text-lg text-primary focus:outline-none focus:border-primary transition-colors"
              />
            </div>

            <div>
              <label 
                for="subject" 
                class="block text-base uppercase tracking-[0.15em] text-secondary mb-3"
              >
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full bg-background border border-border px-5 py-4 text-lg text-primary focus:outline-none focus:border-primary transition-colors"
              >
                <option value="general">General Inquiry</option>
                <option value="prints">Print Purchase</option>
                <option value="commission">Commission</option>
                <option value="exhibition">Exhibition</option>
                <option value="licensing">Licensing</option>
              </select>
            </div>

            <div>
              <label 
                for="message" 
                class="block text-base uppercase tracking-[0.15em] text-secondary mb-3"
              >
                Message
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="6"
                required
                class="w-full bg-transparent border border-border px-5 py-4 text-lg text-primary focus:outline-none focus:border-primary transition-colors resize-none"
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full border border-border px-10 py-5 text-lg uppercase tracking-[0.15em] font-semibold text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
            >
              Send Message
            </button>
          </form>

          <div class="mt-20 pt-10 border-t border-border">
            <p class="text-base uppercase tracking-[0.15em] text-secondary">
              Or email directly at
            </p>
            <a 
              href="mailto:hello@sondernista.com"
              class="mt-3 block text-xl text-primary hover:opacity-60 transition-opacity"
            >
              hello@sondernista.com
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
