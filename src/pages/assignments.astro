---
import Layout from '../layouts/Layout.astro'

const assignments = [
  {
    client: "The New York Times",
    image: "/images/assignment-nytimes.jpg",
    type: "Editorial",
    status: "coming soon"
  },
  {
    client: "Vogue",
    image: "/images/assignment-vogue.jpg",
    type: "Fashion",
    status: "coming soon"
  },
  {
    client: "Acne Studios",
    image: "/images/assignment-acne.jpg",
    type: "Campaign",
    status: "coming soon"
  },
  {
    client: "Leica",
    image: "/images/assignment-leica.jpg",
    type: "Brand",
    status: "coming soon"
  },
]
---

<Layout title="Assignments â€” Sondernista">
  <div class="pt-24">
    <section class="py-16 md:py-24">
      <div class="max-w-[1200px] mx-auto px-6">
        <h1 class="text-2xl uppercase tracking-widest font-bold text-primary mb-4">
          Assignments
        </h1>
        <p class="text-sm text-muted-foreground max-w-xl mb-16">
          Commercial and editorial work for select clients. 
          For booking inquiries, please visit the contact page.
        </p>

        <div class="grid md:grid-cols-2 gap-8">
          {assignments.map((assignment) => (
            <div class="group relative border border-border overflow-hidden">
              <div class="aspect-[4/3]">
                <img 
                  src={assignment.image} 
                  alt={assignment.client}
                  class="w-full h-full object-cover grayscale brightness-50"
                  loading="lazy"
                />
              </div>
              <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-6">
                <p class="text-xs uppercase tracking-widest text-secondary mb-2">
                  {assignment.type}
                </p>
                <h2 class="text-lg uppercase tracking-widest font-bold text-primary">
                  {assignment.client}
                </h2>
                <p class="mt-4 text-xs uppercase tracking-widest text-muted-foreground">
                  {assignment.status}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>
