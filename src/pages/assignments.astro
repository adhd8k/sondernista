---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import { assignments } from '../data/projects'
---

<Layout title="Assignments â€” SONDERNISTA">
  <div class="pt-28">
    <section class="py-16 md:py-24">
      <div class="max-w-[1400px] mx-auto px-8">
        <h1 class="text-4xl md:text-5xl uppercase tracking-[0.15em] font-semibold text-primary mb-6">
          Assignments
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mb-20">
          Commercial and editorial work for select clients. 
          For booking inquiries, please visit the contact page.
        </p>

        <div class="grid md:grid-cols-2 gap-10">
          {assignments.map((assignment) => (
            <div class="group relative border border-border overflow-hidden">
              <div class="aspect-[4/3]">
                <Image 
                  src={assignment.image} 
                  alt={assignment.client}
                  widths={[600, 900, 1200]}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 700px"
                  class="w-full h-full object-cover brightness-50"
                  loading="lazy"
                />
              </div>
              <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-8">
                <p class="text-base uppercase tracking-[0.15em] text-white/90 mb-4">
                  {assignment.type}
                </p>
                <div class="bg-background/90 px-6 py-4">
                  <h2 class="text-3xl uppercase tracking-[0.15em] font-semibold text-primary">
                    {assignment.client}
                  </h2>
                  <p class="mt-2 text-base text-primary/90">
                    {assignment.subtitle}
                  </p>
                </div>
                <p class="mt-6 text-base uppercase tracking-[0.15em] text-white/80">
                  {assignment.status}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>
