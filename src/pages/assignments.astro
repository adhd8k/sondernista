---
import Layout from '../layouts/Layout.astro'

const assignments = [
  {
    client: "OSC",
    subtitle: "Ontario Suspension Collective",
    image: "/images/assignment-osc.jpg",
    type: "Documentation",
    status: "coming soon"
  },
  {
    client: "BME",
    subtitle: "Body Modification Ezine",
    image: "/images/assignment-bme.jpg",
    type: "Editorial",
    status: "coming soon"
  },
  {
    client: "PATINA",
    subtitle: "Texture & Time",
    image: "/images/assignment-patina.jpg",
    type: "Aesthetic",
    status: "coming soon"
  },
  {
    client: "IR",
    subtitle: "Infrared Studies",
    image: "/images/assignment-ir.jpg",
    type: "Exploration",
    status: "coming soon"
  },
]
---

<Layout title="Assignments â€” Sondernista">
  <div class="pt-28">
    <section class="py-16 md:py-24">
      <div class="max-w-[1400px] mx-auto px-8">
        <h1 class="text-4xl md:text-5xl uppercase tracking-[0.15em] font-semibold text-primary mb-6">
          Assignments
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mb-20">
          Commercial and editorial work for select clients. 
          For booking inquiries, please visit the contact page.
        </p>

        <div class="grid md:grid-cols-2 gap-10">
          {assignments.map((assignment) => (
            <div class="group relative border border-border overflow-hidden">
              <div class="aspect-[4/3]">
                <img 
                  src={assignment.image} 
                  alt={assignment.client}
                  class="w-full h-full object-cover grayscale brightness-50"
                  loading="lazy"
                />
              </div>
              <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-8">
                <p class="text-base uppercase tracking-[0.15em] text-secondary mb-4">
                  {assignment.type}
                </p>
                <div class="bg-background/90 px-6 py-4">
                  <h2 class="text-3xl uppercase tracking-[0.15em] font-semibold text-primary">
                    {assignment.client}
                  </h2>
                  <p class="mt-2 text-base text-primary/80">
                    {assignment.subtitle}
                  </p>
                </div>
                <p class="mt-6 text-base uppercase tracking-[0.15em] text-muted-foreground">
                  {assignment.status}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>
